{
  "hooks": {
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "./hooks/ralph-loop.sh",
            "timeout": 10000
          },
          {
            "type": "command",
            "command": "./hooks/todo-enforcer.sh",
            "timeout": 10000
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "./hooks/comment-checker.sh",
            "timeout": 30000
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "./hooks/delegation-guard.sh",
            "timeout": 5000
          }
        ]
      }
    ]
  }
}
