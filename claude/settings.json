{
  "env": {
    "CLAUDE_CODE_EXPERIMENTAL_AGENT_TEAMS": "1"
  },
  "teammateMode": "tmux",
  "permissions": {
    "allow": [
      "mcp__chronos__ralph_get_state",
      "mcp__chronos__ralph_start",
      "mcp__chronos__ralph_increment",
      "mcp__chronos__ralph_stop",
      "mcp__chronos__ralph_check_promise",
      "mcp__chronos__boulder_get_state",
      "mcp__chronos__boulder_start",
      "mcp__chronos__boulder_add_session",
      "mcp__chronos__boulder_clear",
      "mcp__chronos__boulder_get_progress",
      "mcp__chronos__boulder_list_plans",
      "mcp__chronos__debate_start",
      "mcp__chronos__debate_get_state",
      "mcp__chronos__debate_add_analysis",
      "mcp__chronos__debate_add_round",
      "mcp__chronos__debate_vote",
      "mcp__chronos__debate_conclude",
      "mcp__chronos__debate_list_history",
      "mcp__chronos__debate_clear",
      "mcp__chronos__ecomode_enable",
      "mcp__chronos__ecomode_disable",
      "mcp__chronos__ecomode_status",
      "mcp__chronos__ecomode_get_tier",
      "mcp__chronos__ecomode_should_skip",
      "mcp__chronos__autopilot_start",
      "mcp__chronos__autopilot_get_phase",
      "mcp__chronos__autopilot_check_gate",
      "mcp__chronos__autopilot_advance",
      "mcp__chronos__autopilot_update_progress",
      "mcp__chronos__autopilot_set_output",
      "mcp__chronos__autopilot_fail",
      "mcp__chronos__autopilot_status",
      "mcp__chronos__autopilot_clear",
      "mcp__chronos__workmode_enable",
      "mcp__chronos__workmode_disable",
      "mcp__chronos__workmode_status",
      "mcp__chronos__workmode_check",
      "mcp__chronos__ui_verification_config",
      "mcp__chronos__ui_verification_record",
      "mcp__chronos__ui_verification_status",
      "mcp__chronos__ui_verification_command",
      "mcp__chronos__ui_verification_prompt",
      "mcp__chronos__model_router_recommend",
      "mcp__chronos__model_router_junior_tier",
      "mcp__chronos__model_router_agent",
      "mcp__chronos__agent_limiter_status",
      "mcp__chronos__agent_limiter_can_spawn",
      "mcp__chronos__agent_limiter_register",
      "mcp__chronos__agent_limiter_heartbeat",
      "mcp__chronos__agent_limiter_unregister",
      "mcp__chronos__agent_limiter_set_limit",
      "mcp__chronos__agent_limiter_cleanup",
      "mcp__chronos__agent_limiter_clear",
      "mcp__chronos__chronos_status",
      "mcp__chronos__chronos_should_continue",
      "mcp__codex__codex",
      "mcp__codex__codex-reply",
      "mcp__gemini__chat",
      "mcp__gemini__googleSearch",
      "mcp__gemini__analyzeFile",
      "mcp__gemini__session_create",
      "mcp__gemini__session_chat",
      "mcp__gemini__session_list",
      "mcp__gemini__session_delete",
      "mcp__gemini__session_clear",
      "mcp__zai-glm__chat",
      "mcp__zai-glm__analyze_code",
      "mcp__zai-glm__session_create",
      "mcp__zai-glm__session_chat",
      "mcp__zai-glm__session_list",
      "mcp__zai-glm__session_delete",
      "mcp__zai-glm__session_clear",
      "mcp__context7__resolve-library-id",
      "mcp__context7__query-docs",
      "mcp__grep-app__searchGitHub",
      "mcp__lsp-tools__lsp_goto_definition",
      "mcp__lsp-tools__lsp_find_references",
      "mcp__lsp-tools__lsp_symbols",
      "mcp__lsp-tools__lsp_diagnostics",
      "mcp__lsp-tools__lsp_rename",
      "mcp__lsp-tools__ast_grep_search",
      "mcp__lsp-tools__ast_grep_replace"
    ]
  },
  "hooks": {
    "SessionStart": [
      {
        "matcher": "compact",
        "hooks": [
          {
            "type": "command",
            "command": "bash -c 'R=$(git rev-parse --show-toplevel 2>/dev/null); H=\"$HOME/.claude/hooks/post-compact.sh\"; [ -n \"$R\" ] && [ -f \"$R/.claude/hooks/post-compact.sh\" ] && H=\"$R/.claude/hooks/post-compact.sh\"; [ -f \"$H\" ] && bash \"$H\"'",
            "timeout": 5000
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash -c 'R=$(git rev-parse --show-toplevel 2>/dev/null); H=\"$HOME/.claude/hooks/ralph-loop.sh\"; [ -n \"$R\" ] && [ -f \"$R/.claude/hooks/ralph-loop.sh\" ] && H=\"$R/.claude/hooks/ralph-loop.sh\"; [ -f \"$H\" ] && bash \"$H\"'",
            "timeout": 10000
          },
          {
            "type": "command",
            "command": "bash -c 'R=$(git rev-parse --show-toplevel 2>/dev/null); H=\"$HOME/.claude/hooks/todo-enforcer.sh\"; [ -n \"$R\" ] && [ -f \"$R/.claude/hooks/todo-enforcer.sh\" ] && H=\"$R/.claude/hooks/todo-enforcer.sh\"; [ -f \"$H\" ] && bash \"$H\"'",
            "timeout": 10000
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "bash -c 'R=$(git rev-parse --show-toplevel 2>/dev/null); H=\"$HOME/.claude/hooks/comment-checker.sh\"; [ -n \"$R\" ] && [ -f \"$R/.claude/hooks/comment-checker.sh\" ] && H=\"$R/.claude/hooks/comment-checker.sh\"; [ -f \"$H\" ] && bash \"$H\"'",
            "timeout": 30000
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "bash -c 'R=$(git rev-parse --show-toplevel 2>/dev/null); H=\"$HOME/.claude/hooks/debate-lock.sh\"; [ -n \"$R\" ] && [ -f \"$R/.claude/hooks/debate-lock.sh\" ] && H=\"$R/.claude/hooks/debate-lock.sh\"; [ -f \"$H\" ] && bash \"$H\"'",
            "timeout": 5000
          },
          {
            "type": "command",
            "command": "bash -c 'R=$(git rev-parse --show-toplevel 2>/dev/null); H=\"$HOME/.claude/hooks/delegation-guard.sh\"; [ -n \"$R\" ] && [ -f \"$R/.claude/hooks/delegation-guard.sh\" ] && H=\"$R/.claude/hooks/delegation-guard.sh\"; [ -f \"$H\" ] && bash \"$H\"'",
            "timeout": 5000
          },
          {
            "type": "command",
            "command": "bash -c 'R=$(git rev-parse --show-toplevel 2>/dev/null); H=\"$HOME/.claude/hooks/autopilot-gate.sh\"; [ -n \"$R\" ] && [ -f \"$R/.claude/hooks/autopilot-gate.sh\" ] && H=\"$R/.claude/hooks/autopilot-gate.sh\"; [ -f \"$H\" ] && bash \"$H\"'",
            "timeout": 5000
          }
        ]
      },
      {
        "matcher": "Task",
        "hooks": [
          {
            "type": "command",
            "command": "bash -c 'R=$(git rev-parse --show-toplevel 2>/dev/null); H=\"$HOME/.claude/hooks/agent-limiter.sh\"; [ -n \"$R\" ] && [ -f \"$R/.claude/hooks/agent-limiter.sh\" ] && H=\"$R/.claude/hooks/agent-limiter.sh\"; [ -f \"$H\" ] && bash \"$H\"'",
            "timeout": 5000
          }
        ]
      }
    ]
  }
}
